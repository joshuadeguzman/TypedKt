<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animate via XML"
        android:textStyle="bold" />

    <io.jmdg.typedkt.TypedKtView
        android:id="@+id/tkv_animate_xml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="@string/demo_characters"
        app:delay="150"
        app:isAnimatedByWord="false"
        app:isLooped="false" A/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Animate Characters"
        android:textStyle="bold" />

    <io.jmdg.typedkt.TypedKtView
        android:id="@+id/tkv_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="@string/demo_characters" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Animate Words"
        android:textStyle="bold" />

    <io.jmdg.typedkt.TypedKtView
        android:id="@+id/tkv_words"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="@string/demo_words" />

    <Button
        android:id="@+id/bt_animate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Start Animation" />

</LinearLayout>